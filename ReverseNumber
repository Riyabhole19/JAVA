
import java.util.Scanner;

public class ReverseNumber {
	
	public static void main(String[] args) {
		int rev=0;
		int org;
		Scanner sc= new Scanner(System.in);
		System.out.println("Enter the number");
		int num=sc.nextInt();
		
		org=num;
		
		
		while(num!=0)
		{
			int dig=num%10;
			
			rev=rev*10+dig;
			
			num=num/10;
		}
		
		
		
			System.out.println("Reversed number is :- "+rev);
		
		
		
	}
}
