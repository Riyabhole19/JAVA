#  * * * * * * *

import java.util.Scanner;
public class Pattern
{
	public static void main(String [] args)
{		

	Scanner sn=new Scanner(System.in);
	System.out.print("Enter  the number :- ");
	int n = sn.nextInt();
	Patter(n);
}
	static void Patter(int n)
{
	for(int i=0;i<=n;i++)
{
	for(int j=0;j<i;j++)
{
	System.out.print("* ");
}
	System.out.println();
}

}
}
